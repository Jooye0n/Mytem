<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">


        <TextView
            android:id="@+id/textView12"
            android:layout_width="63dp"
            android:layout_height="38dp"
            android:layout_marginStart="@dimen/start_margin_16dp"
            android:text="@string/email"
            android:textColor="@color/colorDark"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/emailM"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/emailM"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="52dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="@string/email_h"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorDark"
            android:textColorHint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/levelM" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="66dp"
            android:layout_height="37dp"
            android:layout_marginStart="@dimen/start_margin_16dp"
            android:text="직급"
            android:textColor="@color/colorDark"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/levelM"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="63dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/start_margin_16dp"
            android:text="@string/phone"
            android:textColor="@color/colorDark"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/phoneM"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="63dp"
            android:layout_height="38dp"
            android:layout_marginStart="@dimen/start_margin_16dp"
            android:text="@string/pwck"
            android:textColor="@color/colorDark"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/passwordM_ck"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="65dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:text="@string/name"
            android:textColor="@color/colorDark"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/nameM"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="74dp"
            android:layout_height="38dp"
            android:layout_marginStart="@dimen/start_margin_16dp"
            android:text="@string/pw"
            android:textColor="@color/colorDark"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/passwordM"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/levelM"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="52dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="직급 입력"
            android:inputType="textPersonName"
            android:textColor="@color/colorDark"
            android:textColorHint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameM" />

        <EditText
            android:id="@+id/nameM"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="52dp"
            android:layout_marginTop="84dp"
            android:ems="10"
            android:hint="@string/name_h"
            android:inputType="textPersonName"
            android:textColor="@color/colorDark"
            android:textColorHint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/passwordM"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="52dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="@string/pw_h"
            android:inputType="textPassword"
            android:textColorHint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailM" />

        <EditText
            android:id="@+id/passwordM_ck"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="52dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="@string/pwck_h"
            android:inputType="textPassword"
            android:textColorHint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordM" />

        <EditText
            android:id="@+id/phoneM"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="52dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="@string/phone_h"
            android:inputType="phone"
            android:textColor="@color/colorDark"
            android:textColorHint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordM_ck" />

        <Button
            android:id="@+id/btn_createM"
            android:layout_width="103dp"
            android:layout_height="44dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_round"
            android:text="@string/join"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phoneM"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_doubleckM"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/doubleck"
            android:textSize="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/levelM" />

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>